    "version": "0.2.0",
    "configurations": [
        {
            //"type": "pwa-node",
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "sourceMaps": true,
            "args": [
                "./entrypoint.conf.js",
                "--spec",
                "./test/specs/login_S.spec.ts"
            ],
            "env": {
                "DEBUG": "1"
            },
           // "port": 5858,
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}